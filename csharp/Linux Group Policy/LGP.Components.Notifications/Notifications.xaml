<Window x:Class="LGP.Components.Notifications.Notifications"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notifcation" x:Name="LGPPopup" Height="30" Width="278"
        WindowStartupLocation="Manual" Background="{x:Null}" Opacity="0" AllowsTransparency="True" WindowStyle="None"
        ResizeMode="NoResize" Padding="0" ShowInTaskbar="False" Topmost="True" IsTabStop="False" IsHitTestVisible="False"
        Focusable="False">
    <Grid>
        <Border CornerRadius="3" BorderBrush="Black" Background="white" BorderThickness="1">
            <Grid>
                <TextBlock HorizontalAlignment="Stretch" Margin="5" Name="popupText" Text="TextBlock"
                   VerticalAlignment="Stretch" TextAlignment="Center" />
            </Grid>
        </Border>
    </Grid>
</Window>

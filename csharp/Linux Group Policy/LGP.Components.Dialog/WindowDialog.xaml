<Window x:Class="LGP.Components.Dialog.WindowDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="PopupWindow" WindowStartupLocation="CenterOwner"
        WindowStyle="None" Background="White" Opacity="0.1" AllowsTransparency="True" x:Name="PWindow" Width="20" Height="20">
  <Grid>
    <Border BorderBrush="Black" BorderThickness="1" Margin="0" Grid.RowSpan="5" Padding="5" CornerRadius="3">
      <Border.Background>
        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
          <GradientStop Color="#FFFFFFFF" Offset="0.1" />
          <GradientStop Color="#EEFFFFFF" Offset="0.2" />
          <GradientStop Color="#DDFFFFFF" Offset="0.3" />
          <GradientStop Color="#CCFFFFFF" Offset="0.4" />
          <GradientStop Color="#BBFFFFFF" Offset="0.5" />
          <GradientStop Color="#BBFFFFFF" Offset="0.6" />
          <GradientStop Color="#CCFFFFFF" Offset="0.7" />
          <GradientStop Color="#DDFFFFFF" Offset="0.8" />
          <GradientStop Color="#FFFFFFFF" Offset="0.9" />
          <GradientStop Color="#FFFFFFFF" Offset="1.0" />
        </LinearGradientBrush>
      </Border.Background>
      <Grid Name="popupPane"></Grid>
    </Border>
  </Grid>
</Window>